{
  "$id": "https://www.io7m.com/idstore/server-configuration-1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "$defs": {
    "%Schema": {
      "type": "string",
      "const": "https://www.io7m.com/idstore/server-configuration-1.json"
    },

    "ButtonStateColorScheme": {
      "TextColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "BodyColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "BorderColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "EmbossEColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "EmbossNColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "EmbossSColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "EmbossWColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "required": [
        "TextColor",
        "BodyColor",
        "BorderColor",
        "EmbossEColor",
        "EmbossNColor",
        "EmbossSColor",
        "EmbossWColor"
      ]
    },

    "ButtonColors": {
      "Enabled": {
        "$ref": "#/$defs/ButtonStateColorScheme"
      },
      "Disabled": {
        "$ref": "#/$defs/ButtonStateColorScheme"
      },
      "Hover": {
        "$ref": "#/$defs/ButtonStateColorScheme"
      },
      "Pressed": {
        "$ref": "#/$defs/ButtonStateColorScheme"
      },
      "required": [
        "Enabled",
        "Disabled",
        "Hover",
        "Pressed"
      ]
    },

    "ColorScheme": {
      "ErrorBorderColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "HeaderBackgroundColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "HeaderLinkColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "HeaderTextColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "MainBackgroundColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "MainLinkColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "MainMessageBorderColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "MainTableBorderColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "MainTextColor": {
        "type": "string",
        "pattern": "^#[a-f0-9]{6}$"
      },
      "ButtonColors": {
        "$ref": "#/$defs/ButtonColors"
      },

      "required": [
        "ButtonColors",
        "ErrorBorderColor",
        "HeaderBackgroundColor",
        "HeaderLinkColor",
        "HeaderTextColor",
        "MainBackgroundColor",
        "MainLinkColor",
        "MainMessageBorderColor",
        "MainTableBorderColor",
        "MainTextColor"
      ]
    },

    "Branding": {
      "ColorScheme": {
        "$ref": "#/$defs/ColorScheme"
      },
      "required": [
        "ColorScheme"
      ]
    },

    "OpenTelemetry": {
      "LogicalServiceName": {
        "type": "string"
      },
      "OTELCollectorAddress": {
        "type": "string",
        "format": "uri"
      },
      "required": [
        "LogicalServiceName",
        "OTELCollectorAddress"
      ]
    },

    "HTTPService": {
      "ListenAddress": {
        "type": "string"
      },
      "ListenPort": {
        "type": "number"
      },
      "ExternalAddress": {
        "type": "string"
      },
      "SessionExpiration": {
        "type": "string"
      },
      "required": [
        "ListenAddress",
        "ListenPort",
        "ExternalAddress"
      ]
    },

    "HTTP": {
      "AdminAPIService": {
        "$ref": "#/$defs/HTTPService"
      },
      "UserAPIService": {
        "$ref": "#/$defs/HTTPService"
      },
      "UserViewService": {
        "$ref": "#/$defs/HTTPService"
      },
      "required": [
        "AdminAPIService",
        "UserAPIService",
        "UserViewService"
      ]
    },

    "History": {
      "UserLoginHistoryLimit": {
        "type": "number"
      },
      "AdminLoginHistoryLimit": {
        "type": "number"
      },
      "required": [
        "UserLoginHistoryLimit",
        "AdminLoginHistoryLimit"
      ]
    },

    "RateLimiting": {
      "EmailVerificationRateLimit": {
        "type": "string"
      },
      "PasswordResetRateLimit": {
        "type": "string"
      },
      "required": [
        "EmailVerificationRateLimit",
        "PasswordResetRateLimit"
      ]
    },

    "Database": {
      "Kind": {
        "type": "string",
        "enum": [
          "POSTGRESQL"
        ]
      },
      "User": {
        "type": "string"
      },
      "Password": {
        "type": "string"
      },
      "Host": {
        "type": "string"
      },
      "Port": {
        "type": "number"
      },
      "Name": {
        "type": "string"
      },
      "Create": {
        "type": "boolean"
      },
      "Upgrade": {
        "type": "boolean"
      },
      "required": [
        "Kind",
        "User",
        "Password",
        "Host",
        "Port",
        "Name",
        "Create",
        "Upgrade"
      ]
    },

    "Mail": {
      "Transport": {
        "oneOf": [
          {
            "$ref": "#/$defs/SMTP"
          },
          {
            "$ref": "#/$defs/SMTPS"
          },
          {
            "$ref": "#/$defs/SMTP_TLS"
          }
        ]
      },
      "Sender": {
        "type": "string"
      },
      "VerificationExpiration": {
        "type": "string"
      },
      "required": [
        "Transport",
        "Sender",
        "VerificationExpiration"
      ]
    },

    "SMTP": {
      "Type": {
        "type": "string",
        "const": "SMTP"
      },
      "Host": {
        "type": "string"
      },
      "Port": {
        "type": "number"
      },
      "required": [
        "Type",
        "Host",
        "Port"
      ]
    },

    "SMTPS": {
      "Type": {
        "type": "string",
        "const": "SMTPS"
      },
      "Host": {
        "type": "string"
      },
      "Port": {
        "type": "number"
      },
      "required": [
        "Type",
        "Host",
        "Port"
      ]
    },

    "SMTP_TLS": {
      "Type": {
        "type": "string",
        "const": "SMTP_TLS"
      },
      "Host": {
        "type": "string"
      },
      "Port": {
        "type": "number"
      },
      "required": [
        "Type",
        "Host",
        "Port"
      ]
    },

    "Configuration": {
      "%Schema": {
        "$ref": "#/$defs/%Schema"
      },
      "Mail": {
        "$ref": "#/$defs/Mail"
      },
      "Database": {
        "$ref": "#/$defs/Database"
      },
      "History": {
        "$ref": "#/$defs/History"
      },
      "HTTP": {
        "$ref": "#/$defs/HTTP"
      },
      "Branding": {
        "$ref": "#/$defs/Branding"
      },
      "OpenTelemetry": {
        "$ref": "#/$defs/OpenTelemetry"
      },
      "RateLimiting": {
        "$ref": "#/$defs/RateLimiting"
      },
      "required": [
        "%Schema",
        "Branding",
        "Database",
        "HTTP",
        "History",
        "Mail",
        "OpenTelemetry",
        "RateLimiting"
      ]
    }
  },

  "$ref": "#/$defs/Configuration"
}